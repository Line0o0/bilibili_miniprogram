/* 首页di */

page{
    color: #666666;
    /* 为什么是page？ */
    padding: 10rpx;
}

.nav_wrap{}
.nav{
    white-space: nowrap;
    padding:5rpx 0;

}

.nav_item{
    padding: 20rpx 45rpx;
    font-size: 30rpx;
    display:inline-block;
}

.nav_item.active{
    border-bottom: 5rpx solid #de688b;
}

.slides{
margin-top: 10rpx;
}

.slides swiper{
    height:220rpx;
    /* 不用设置宽度？因为image的mode被设置成为width fix */
}

.slides navigator{
    width: 100%;
    height:100%;
}

.slides image{
    width: 100%;
    height:100%;
}

/* 视频列表 */
.video_wrap{
display: flex;
flex-wrap: wrap;
padding: 5rpx;
justify-content: space-between;
}
.video_item{
    width:48%;
    margin-bottom: 20rpx;
}
.video_img{
position: relative;


}

.video_img image{
  width:100%;
  border-radius: 15rpx;
}

.video_img .video_info{
    position: absolute;
    left: 0;
    bottom: 10rpx;
    width: 100%;
    /* 使用了width 100%两个才不会贴在一起 */
    display: flex;
    /* 必须使用了flex justify-content才有用 */
    justify-content: space-around;
    color: #fff;
    font-size: 24rpx;

}

.video_title{
font-size: 28rpx;
display: -webkit-box;
overflow:hidden;
white-space: normal;
text-overflow:ellipsis;
word-wrap: break-word;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical; 
}


